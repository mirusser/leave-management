@model leave_management.Models.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Allocate leave types";
}

<h1>Allocate leave types</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>

            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="SetLeave" asp-route-leaveTypeId="@item.Id" class="btn btn-outline-success">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        Allocate to employees
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
