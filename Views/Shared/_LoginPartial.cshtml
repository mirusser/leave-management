@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link" role="button">
            @User.Identity.Name
        </a>
    </li>

    <li class="nav-item">
        <form class="form-inline nav-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">
                <i class="nav-icon fas fa-sign-out-alt"></i>
                Logout
            </button>
        </form>
    </li>
}
else
{

    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Register" class="nav-link" role="button">
            <i class="nav-icon fas fa-user-alt"></i>
            Register
        </a>
    </li>

    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link" role="button">
            <i class="nav-icon fas fa-sign-in-alt"></i>
            Login
        </a>
    </li>

}
