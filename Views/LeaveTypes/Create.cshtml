@using leave_management.Extensions
@using leave_management.Controllers

@model leave_management.Models.LeaveTypeVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="@(MvcHelper.NameOfController<LeaveTypesController>())" asp-action="@(nameof(LeaveTypesController.Create))">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="name-input" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeafaultNumberOfDays" class="control-label"></label>
                <input asp-for="DeafaultNumberOfDays" class="form-control" />
                <span asp-validation-for="DeafaultNumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <a asp-action="Index" class="btn btn-outline-secondary btn-block">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#name-input').on('focus click', function(e){
            var foo = this.value; 
            this.value = ''; 
            if (foo) { this.value = foo; }
        });

        $(function(){
            setTimeout(function () { $('#name-input').focus(); }, 100);
        });
    </script>
}
