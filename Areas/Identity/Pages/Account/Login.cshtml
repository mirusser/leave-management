<div class="row">
    <div class="offset-1">
        <div class="hold-transition">

            <div class="login-box">
                <div class="card card-outline card-primary">
                    <div class="card-header text-center">
                        <h1>
                            @ViewData["Title"]
                        </h1>
                    </div>
                    <div class="card-body">
                        <p class="login-box-msg">Sign in to start your session</p>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <form id="account" method="post">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <div class="input-group mb-3">
                                <input id="email-input" asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                            </div>

                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <div class="input-group mb-3">
                                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-8">
                                    <div class="icheck-primary">
                                        <input type="checkbox" id="remember">
                                        <label asp-for="Input.RememberMe" for="remember">
                                            Remember Me
                                        </label>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                                </div>
                            </div>
                        </form>

                        <p class="mb-1">
                            <a asp-page="./ForgotPassword">I forgot my password</a>
                        </p>
                        <p class="mb-0">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Register a new membership</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            $('#email-input').focus();
        });
    </script>
}
