@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <h1>
                @ViewData["Title"]
            </h1>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Register a new membership</p>

            <div asp-validation-summary="All" class="text-danger"></div>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                <div class="input-group mb-3">
                    <input id="first-name-input" asp-for="Input.FirstName" type="text" class="form-control" placeholder="First name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                <div class="input-group mb-3">
                    <input asp-for="Input.LastName" type="text" class="form-control" placeholder="Last name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div class="input-group mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <div class="input-group mb-3">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Retype password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                </div>
            </form>

            <hr />
            <a asp-area="Identity" asp-page="/Account/Login" class="text-center">I already have a membership</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            $('#first-name-input').focus();
        });
    </script>
}
